FROM python

WORKDIR /logs

COPY ./stream.py ./stream.py
ENTRYPOINT ["python3", "-u"]
# опция -u тут обязательная
# в противном случае стандартный поток вывода
# не будет отзываться в комманде docker logs
# в `python --help` про эту опцию пишут, что она
# оба потока и stdout и stderr небуферизованными
# что это означает, конечно не понятно, но наверное
# пока и не нужно 